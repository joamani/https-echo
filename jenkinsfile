pipeline {
    agent any
        
    stages {
        stage('Build Go App') {
            steps {
                // Checkout source code from your repository
                git 'https://github.com/joamani/https-echo.git'
                
                // Build Go binary
                sh 'go build -o app ./'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                // Build Docker image
                script {
                    docker.build("docker.io/myapp}:latest", '.')
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                // Push Docker image to registry
                script {
                    docker.withRegistry("docker.io", "dev") {
                        docker.image("docker.io/dev}:latest").push()
                    }
                }
            }
        }
    }
}
