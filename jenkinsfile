pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = 'myapp'
        DOCKER_REGISTRY = 'docker.io' // Replace with your Docker registry URL
        DOCKER_REGISTRY_CREDENTIAL_ID = 'dockerhub-credentials' // Replace with your Jenkins credentials ID for Docker registry authentication
    }
    
    stages {
        stage('Build Go App') {
            steps {
                // Checkout source code from your repository
                git 'https://github.com/joamani/https-echo.git'

                // Add a step to list files in the workspace
                bat 'ls -la' // This command lists all files in the workspace
                // Alternatively, you can use 'dir' command on Windows systems

                // Build Go binary
                sh 'go build -o app .'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                // Build Docker image
                script {
                    docker.build("${DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:latest", '.')
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                // Push Docker image to registry
                script {
                    docker.withRegistry("${DOCKER_REGISTRY}", "${DOCKER_REGISTRY_CREDENTIAL_ID}") {
                        docker.image("${DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:latest").push()
                    }
                }
            }
        }
    }
}
