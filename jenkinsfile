pipeline {
    agent any
    
    environment {
        // Set environment variables for authentication (replace with your registry credentials)
        REGISTRY_CREDENTIALS = 'jenkins-repo'
        REGISTRY_URL = '891377029200.dkr.ecr.us-east-1.amazonaws.com/jenkins-repo'
        DOCKER IMAGE = ''
    }
    
    stages {
        stage('Build Go Application') {
            steps {
                // Checkout the source code from your Git repository
                git 'https://github.com/joamani/https-echo.git'
                
                // Build the Go application
                sh 'go build -o http-echo .'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Use Dockerfile to build image
                    docker.build("${REGISTRY_URL}/http-echo:latest", '-f Dockerfile .')
                }
            }
        }
        
        stage('Deploy Docker image') {
            steps {
                script {
                    // Tag the Docker image for the local registry
                    docker.image("${REGISTRY_URL}/http-echo:latest").withPush(true)
                }
            }
      ~  }
    }
}